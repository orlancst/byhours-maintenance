			</button>

			<button id="btnCloseModal" class="fixed bottom-5 right-5 p-3 bg-white rounded-full z-40 hidden" title="Cerrar">
				<Image src={closeIcon} alt="" id='imgModal' class='select-none w-8 scale-50'/>
			</button>

		</section>

		<div id="modal-dialog" class="fixed left-0 top-0 bg-black bg-opacity-60 backdrop-blur-sm w-screen h-screen justify-center items-center opacity-0 hidden transition-opacity duration-500">
			<div class="flex flex-row items-center gap-x-2 fixed bottom-[90px] right-6">
				<span class="text-white font-titilliumweb-semiBold tracking-wide text-xl">Las Américas | BOG</span>
				<a href="https://api.whatsapp.com/send?phone=573115218759&text=Buenas%2C%20quisiera%20hacer%20una%20reserva" target="_blank" class=" bg-[#ff5800] p-3 rounded-full">
					<Image src={callIcon} alt="" class='select-none w-8'/>
				</a>
			</div>
			<div class="flex flex-row items-center gap-x-2 fixed bottom-[160px] right-6">
				<span class="text-white font-titilliumweb-semiBold tracking-wide text-xl">Circunvalar | BAQ</span>
				<a href="https://api.whatsapp.com/send?phone=573102385134&text=Buenas%2C%20quisiera%20hacer%20una%20reserva" target="_blank" class=" bg-[#ff5800] p-3 rounded-full">
					<Image src={callIcon} alt="" class='select-none w-8'/>
				</a>
			</div>
			<div class="flex flex-row items-center gap-x-2 fixed bottom-[230px] right-6">
				<span class="text-white font-titilliumweb-semiBold tracking-wide text-xl">Chiquinquirá | BAQ</span>
				<a href="https://api.whatsapp.com/send?phone=573138701803&text=Buenas%2C%20quisiera%20hacer%20una%20reserva" target="_blank" class=" bg-[#ff5800] p-3 rounded-full">
					<Image src={callIcon} alt="" class='select-none w-8'/>
				</a>
			</div>
			<div class="flex flex-row items-center gap-x-2 fixed bottom-[300px] right-6">
				<span class="text-white font-titilliumweb-semiBold tracking-wide text-xl">Astor | BAQ</span>
				<a href="https://api.whatsapp.com/send?phone=573003589279&text=Buenas%2C%20quisiera%20hacer%20una%20reserva" target="_blank" class=" bg-[#ff5800] p-3 rounded-full">
					<Image src={callIcon} alt="" class='select-none w-8'/>
				</a>
			</div>
		</div>

		<script>

			const btnOpenModal = document.querySelector("#btnModal");
			const btnCloseModal = document.querySelector("#btnCloseModal");

			btnOpenModal.addEventListener("click", () => {
				let dialog = document.querySelector("#modal-dialog");

				btnCloseModal.classList.toggle("hidden");

				dialog.classList.toggle("hidden");
				dialog.classList.toggle("flex");
	
				setTimeout(() => {
					dialog.classList.toggle("opacity-100");
				}, 20);

			});

			btnCloseModal.addEventListener("click", () => {
				let dialog = document.querySelector("#modal-dialog");

				btnCloseModal.classList.toggle("hidden");

				dialog.classList.toggle("hidden");
				dialog.classList.toggle("flex");

				setTimeout(() => {
					dialog.classList.toggle("opacity-100");
				}, 20);
			})

			function disableImgDragging() {
				var images = document.getElementsByTagName("img");
				for(var i = 0 ; i < images.length ; i++) {
					images[i].classList.add('no-drag');
					images[i].setAttribute('no-drag', 'on');
					images[i].setAttribute('draggable', 'false');
					images[i].addEventListener('dragstart', function( event ) {
						event.preventDefault();
					}, false);	
				}
			}
			disableImgDragging();
		</script>
	</body>
</html>

